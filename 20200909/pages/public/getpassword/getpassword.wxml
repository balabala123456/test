<!--pages/getpassword/getpassword.wxml-->
<view class="wholedisplay">
    <input class="inputphone" bindinput="phone" placeholder="请输入手机号" placeholder-class="textinputphone"></input>
    <view class="codedisplay">
        <input class="inputyzm" bindinput="verify" placeholder="验证码" placeholder-class="textinputyzm"></input>
        <button class="getverifycode" bindtap="getverifycode">获取验证码</button>
    </view>
    <input class="inputpassword" bindinput="password" placeholder="请输入新密码" placeholder-class="textinputpassword"></input>
    <input class="inputpassword1" bindinput="password1" placeholder="请确认新密码" placeholder-class="textinputpassword1"></input>
    <button class="butpassword" bindtap="resetpassword">重置密码</button>
</view>
